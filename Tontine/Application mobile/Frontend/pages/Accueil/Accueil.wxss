/* En-tête */
.page-container {
    height: 100vh;
    display: flex;
    flex-direction: column;
  }
.header {
    font-size: 32rpx;
    font-weight: bold;
    margin: 5% 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 32rpx;
  }
  
  /* Icône de retour et active */
  .back-icon {
    width: 48rpx;
    height: 48rpx;
  }
  
  /* Conteneur scrollable */
  .content {
    padding: 20rpx;
    box-sizing: border-box;
    flex: 1;
    overflow-y: auto;
   
  }
  
  /* Carte Tour */
  .tour-card {
    display: flex;
    background: #fff;
    border-radius: 20rpx;
    padding: 20rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  }
  
  .tour-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
  }
  
  .tour-info {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }
  
  .tour-title {
    font-size: 36rpx;
    font-weight: bold;
  }
  
  .tour-text {
    font-size: 28rpx;
    color: #333;
  }
  
  /* Bandeau info */
  .info-banner {
    background-color: #FF7900;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 40rpx;
    position: relative;
    overflow: hidden;
  }
  
  .banner-text {
    color: #fff;
    font-size: 32rpx;
    width: 65%;
  }
  
  .banner-image {
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
  }
  
  /* Grille de cards */
  .card-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  
  /* Card individuelle */
  .action-card {
    width: 48%;
    background: #fff;
    border-radius: 20rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0.1,0.1,0.1,0.5);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .card-title {
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 10rpx;
  }
  
  .card-text {
    font-size: 24rpx;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .card-image {
    width: 120rpx;
    height: 120rpx;
  }
  
  .image-lien1 {
    width: 40rpx;
    height: 40rpx;
  }
  
  .modal-title-container1 {
      align-items: center;
      text-align: center;
  }

  .close-button {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .close-icon {
    font-size: 48rpx;
    color: #6b7280;
    line-height: 1;
  }


  /* Modal Styles */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
  }


  .modal-overlay1 {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }
  
  .modal-container1 {
    width: 95%;
    max-height: 85vh;
    background: #fff;
    border-radius: 24rpx 24rpx 24rpx 24rpx;
    display: flex;
    flex-direction: column;
    animation: slideUp 0.3s ease-out;
    overflow: hidden;
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
  
  .modal-header1 {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: relative;
    padding: 30rpx;
  }
  
  .modal-title1 {
    font-size: 30rpx;
    font-weight: 600;
    color: #111827;
    text-align: center;
  }
  

  
  .modal-scroll1 {
    flex: 1;
    max-height: calc(85vh - 200rpx);
    overflow-y: auto;
  }
  
  .modal-body1 {
    padding: 32rpx;
  }
  
  .input-group1 {
    margin-bottom: 30rpx;
  }
  
  .input-label {
    font-size: 28rpx;
    font-weight: 500;
    color: black;
    margin-bottom: 12rpx;
    display: block;
  }
  
  .input-field1,
  .textarea-field {
    width: 100%;
    padding: 15rpx 15rpx;
    border: 1rpx solid #ff77006c;
    border-radius: 15rpx;
    font-size: 28rpx;
    color: black;
    background: #fff;
    transition: border-color 0.2s ease;
  }
  
  .input-field:focus,
  .textarea-field:focus {
    border-color: #FF7900;
    outline: none;
  }
  
  .textarea-field {
    min-height: 140rpx;
  }
  
  
  .select-value.placeholder {
    color: #9ca3af;
  }
  
  .select-arrow {
    font-size: 24rpx;
    color: #6b7280;
    margin-left: 12rpx;
  }
  
  .modal-footer {
    background: #fff;
    align-items: center;
    justify-content: center;
    text-align: center;
    margin-right: 5%;
  }

  .modal-footer1 {
    background: #fff;
    align-items: center;
    justify-content: center;
    text-align: center;
    margin-left: 28%;
    margin-bottom: 5%;
  }

  .modaliteText {
      font-size: 28rpx;
  }

  .confirm-button {
    width: 90%;
    height: auto;
    background-color: #FF7900;
    color: #ffffff;
    border-radius: 20rpx;
    font-size: 32rpx;
    font-weight: 600;
    border: none;
    box-shadow: 0 6rpx 20rpx rgba(255, 121, 0, 0.4);
    transition: transform 0.2s ease;
    padding: 20rpx;
    justify-content: center;
    align-items: center;
  }
  
  .confirm-button1 {
    width: 50%;
    height: auto;
    background-color: #FF7900;
    color: #ffffff;
    border-radius: 20rpx;
    font-size: 32rpx;
    font-weight: 600;
    border: none;
    box-shadow: 0 6rpx 20rpx rgba(255, 121, 0, 0.4);
    transition: transform 0.2s ease;
    padding: 20rpx;
    justify-content: center;
    align-items: center;
  }
  
  .confirm-button1:active {
    transform: scale(0.98);
  }
  
  /* Responsive Design */
  @media screen and (max-width: 375px) {
    .carousel-section {
      padding: 15rpx;
    }
    
    .swiper-container {
      height: 250rpx;
    }
    
    .condition-card {
      padding: 24rpx;
    }
    
    .condition-text {
      font-size: 26rpx;
    }
    
    .footer-fixed {
      padding: 24rpx 15rpx;
      padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
    }
    
    .modal-body {
      padding: 24rpx;
    }
  }
  
  @media screen and (min-width: 414px) {
    .carousel-section {
      padding: 30rpx;
    }
    
    .swiper-container {
      height: 350rpx;
    }
    
    .condition-card {
      padding: 40rpx;
    }
  }
    