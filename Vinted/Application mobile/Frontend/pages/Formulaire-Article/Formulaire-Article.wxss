/* Formulaire-Article.wxss */
.page-container {
    width: 750rpx;
    height: 1435rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    background: #f5f5f5;
}

.header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    font-size: 36rpx;
    font-weight: bold;
}

.back-icon {
    width: 57rpx;
    height: 43rpx;
}

.scroll-view {
    width: 691rpx;
    height: 1319rpx;
    margin: 0 auto;
    flex: 1;
}

.form-container {
    border: 5rpx solid lightgray;
    border-radius: 10rpx;
    padding: 20rpx;
    background: #fff;
}

.section-title {
    font-size: 32rpx;
    margin: 20rpx 0 10rpx 38rpx;
    color: #333;
}

.image-upload-container {
    width: 523rpx;
    height: 289rpx;
    margin: 20rpx auto;
    border: 1rpx solid lightgray;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #fafafa;
}

.upload-icon {
    width: 158rpx;
    height: 132rpx;
    margin-bottom: 20rpx;
}

.upload-text {
    display: flex;
    align-items: center;
}

.download-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.image-preview {
    width: 518rpx;
    height: 122rpx;
    margin: 20rpx auto;
    border: 1rpx solid lightgray;
    border-radius: 15rpx;
    display: flex;
    align-items: center;
    padding: 10rpx;
    overflow: hidden;
}

.preview-image {
    width: 120rpx;
    height: 100rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.image-name {
    font-size: 25rpx;
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-right: 10rpx;
}

.image-size {
    font-size: 25rpx;
    width: 80rpx;
    text-align: right;
    margin-right: 10rpx;
    flex-shrink: 0;
}

.delete-icon {
    width: 48rpx;
    height: 62rpx;
    flex-shrink: 0;
}

.input-container {
    width: 513rpx;
    height: 77rpx;
    margin: 20rpx auto;
    border: 1rpx solid lightgray;
    border-radius: 20rpx;
    overflow: hidden;
}

input {
    width: 100%;
    height: 100%;
    padding: 0 20rpx;
    font-size: 28rpx;
}

.category-container {
    width: 513rpx;
    height: 77rpx;
    margin: 20rpx auto;
    border: 1rpx solid lightgray;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    font-size: 28rpx;
}

.arrow-icon {
    width: 30rpx;
    height: 30rpx;
}

.color-container {
    width: 513rpx;
    margin: 20rpx auto;
    display: flex;
    justify-content: space-between;
}

.color-circle {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    border: 1rpx solid #ccc;
    box-sizing: border-box;
}

.color-circle.selected {
    border: 3rpx solid #000;
}

.add-button {
    width: 513rpx;
    height: 77rpx;
    margin: 40rpx auto;
    background: #007AFF;
    color: #fff;
    font-size: 32rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}