<scroll-view class="scrollarea" scroll-y type="list">

<!-- Header fixe en haut -->
<view class="top-nav">
  <view class="header">
    <image src="/images/Retour.png" mode="aspectFit" class="retour" bindtap="goBack"/>
    <view class="profil">
      <image src="/images/dame.png" mode="aspectFit" class="profile"/>
      <text class="username">Frean grâce Debohi</text>
    </view>
  </view>
  
