    <view class="dash1">
      <view class="title-location-row">
        <view class="name1">Vente de téléphone</view>
        <view class="location-container">
          <image src="/images/localistaion.png" mode="aspectFit" class="location-icon"/>
          <text class="location-text">Abidjan</text>
        </view>
      </view>
    </view>
    
  <!-- Section 2: Note et bouton de partage -->
<view class="dash2">
  <!-- Étoiles de notation -->
  <view class="note">
    <text 
      class="star" 
      wx:for="{{5}}" 
      wx:key="index" 
      data-index="{{index}}" 
      bindtap="onRate"
    >
      {{ index < rating ? '★' : '☆' }}
    </text>
  </view>

  <!-- Bouton de partage avec icône à l'intérieur -->
  <button class="partage-btn" bindtap="shareProfile" >
    <image src="/images/partage.png" class="partage-icon" mode="aspectFit"/>
    <text class="partage-text">Partager</text>
  </button>
</view>

    <!-- Section 3: Recherche et ajout -->
