/* index.wxss */
.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;

}


/* Navigation top fixe */
.top-nav {
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: white;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.container {
  padding: 20rpx;
  background-color: white;
  margin-bottom: 50%;
  border-radius: 0;
  box-shadow: none;
}

/* Header */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.retour {
  width: 48rpx;
  height: 48rpx;
}

.profil {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.profile {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* Ligne de séparation */
.trait {
  height: 2rpx;
  background-color: #e0e0e0;
  margin: 20rpx 0;
}

/* Contenu principal */
.dash {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* Section 1 */
.dash1 {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.title-location-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name1 {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.location-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-icon {
  width: 40rpx;
  height: 40rpx;
}

.location-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.dash2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
  gap: 100rpx;
}

.note {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rating-stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 32rpx;
  color: #FFD700; /* Étoile dorée */
  padding-bottom: 23%;
}

.rating-text {
  font-size: 28rpx;
  color: #333;
}

.partage {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.partage-icon {
  width: 32rpx;
  height: 32rpx;
}

.partage-btn {
  background-color: #ff6b35;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 35rpx;
  font-weight: 500;
}

.partage-btn:hover {
  background-color: #e55a2b;
}

/* Section 3 */
.dash3 {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-container {
  display: flex;
  align-items: center;
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 12rpx 16rpx;
  gap: 8rpx;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
}

.search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 35rpx;
  color: #333;
  font-weight: 200;
}

.add-product-btn {
  background-color: #ff6b35;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 35rpx;
  font-weight: 500;
  white-space: nowrap;
}

.add-product-btn:hover {
  background-color: #e55a2b;
}

/* Responsive */
@media (max-width: 750rpx) {
  .dash3 {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .search-container {
    width: 100%;
  }
  
  .add-product-btn {
    width: 100%;
  }
}

/* Section des produits */
.products-section {
  margin-top: 20rpx;
  margin-bottom: 100%;
  background-color: #f5f5f5;
}


.products-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  width: 90%;        /*élargir à 90% du parent */
  margin: 0 auto;    /* centrer horizontalement */
  min-height: 500rpx;

}


.product-item {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.product-actions {
  display: flex;
  padding: 12rpx;
  gap: 8rpx;
}

.modify-btn {
  flex: 1;
  background-color: #ff6b35;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.delete-btn {
  flex: 1;
  background-color: #ff4444;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}

